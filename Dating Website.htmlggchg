<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<header>
    <meta charset="UTF-8">
    <title>Dating Website </title>
    <link class="jsbin" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script class="jsbin" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.0/jquery-ui.min.js"></script>

    <style>

        fieldset{
            background-color: #fcffb6;  border:10px solid yellow;
        }

        label{
            display:inline-block; width:180px; text-align: right;
        }
        span.Red{
           background: #ff0802;
        }
        span.Purple{
            background: #ff1fc2;
        }
    </style>
    <header><center> <h1> Please Enter Your Details For Our Dating Website</h1></center> </header>

    <body>

    <form>
        <!-- first block -->
        <fieldset>
            <legend> Your Face</legend>

            <br /><label >ImagePreview:</label>
            <input type='file' onchange="readURL(this);" />
            <img id="blah" src="#" alt="" />

        </fieldset>
<!-- end of first block -->
<!-- 2nd Block -->
        <br /><fieldset>
            <legend>Your General Details</legend>

            <div>
             <label>Name:</label>
                    <input type="text"
                    required>
            </div>
            <label>Gender:</label>
                <input type="checkbox" name="Gender" value="Male" />Male
                <input type="checkbox" name="Gender" value="Famale" />Female

            <br />  <label>Age</label>
                <input type="text"
                id="age"
                name="age" required>

            <br /> <label>Date Of Birth</label>
                <input type="text"
                id="Dateofbirth"
                name="dateofbirth"
                value="mm/dd/yyyy"required>

            <br /><label>Favorite Color</label>
                <input type="color" name="favcolor" value="#ff0000">

            <br /> <label >Which Country</label><select name="country">
                <option value="">Country...</option>
                <option value="America USA">America USA</option>
                <option value="UK">UK</option>
                <option value="China">China</option>
                <option value="Canada">Canada</option>
                <option value="South America">South America/Brazil</option></select>
    </fieldset>
<!-- End of 2nd block-->
<!-- Start of 3rd block -->
        <br /> <fieldset>
                <legend>Your Indicators</legend>
                <label>Height:</label>
                <span class="Red">Short</span>
                <input type="range" min="0" max="100">
                <span class="Purple">Tall</span>

            <br /> <label>Salary:</label>
                <span class="Red">Poor</span>
                <input type="range" min="0" max="100">
                <span class="Purple">Rich</span>
    </fieldset>
<!-- End of 3rd block -->
<!-- Start of 4th block -->
        <br /> <fieldset>
            <legend>Your Contact Information</legend>
            <br /> <label>Email Address</label>
            <input align="center"
                    type="text"
                    id="EmailAddress"
                    name="EmailAddress" required>
        <table><br /> <label>Date Of Birth</label>
            <input type="text"
                   id="Moble"
                   name="Moble" required>

            <br /> <label>Address</label>
            <textarea rows="4" cols="50"></textarea>
            <br /> <label>Method to Contact You</label>
            <input type="checkbox" name="Contact" value="Email" />Email
            <input type="checkbox" name="Contact" value="Whatsapp" />Whatsapp
            <input type="checkbox" name="Contact" value="InAppChat" />In-App Chat
        </table>
    </fieldset>
<!-- End of 4th block -->

        <input type="submit" value="Submit">
    </form>
    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#blah')
                            .attr('src', e.target.result)
                            .width(150)
                            .height(200);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

    </body>
</header>
</html>
